{
	"name": "Survivio++",
	"version": "0.20.0",
	"description": "Cheat for surviv.io game.",
	"permissions": [
		"tabs",
		"storage",
		"*://*/*",
		"declarativeContent",
		"webRequest",
		"webRequestBlocking"
	],
	"browser_action": {
		"default_title": "Survivio++",
		"default_icon": "128.png"
	},

	"externally_connectable": {
  		"matches": [
  			"*://*.surviv.io/",
  			"*://*.surviv2.io/",
  			"*://*.2dbattleroyale.com/",
  			"*://*.2dbattleroyale.org/"
  		]
	},
	"manifest_version": 2,

	"content_security_policy":  "script-src 'self' 'unsafe-eval'; object-src 'self'",

	"background": {
		"scripts": [
			"init.js",
			"autoAim.js",
			"autoHeal.js",
			"autoLoot.js",
			"autoOpeningDoors.js",
			"bigMapManager.js",
			"grenadeTimer.js",
			"laserPointer.js",
			"linesToPlayers.js",
			"autoFire.js",
			"fpsCounter.js",
			"zoomRadiusManager.js",
			"smokeAlphaManager.js",
			"airDropTracking.js",
			"menu.js",
			"background.js"
		],
		"persistent": true
	},
	"content_scripts": [{
		"matches": [
			"*://*.surviv.io/*",
  			"*://*.surviv2.io/*",
  			"*://*.2dbattleroyale.com/*",
  			"*://*.2dbattleroyale.org/*"
		],
		"css": [
			"style.css"
		],
		"run_at": "document_start"
	}],
	"icons": {
		"16": "16.png",
		"48": "48.png",
		"128": "128.png"
	}
}